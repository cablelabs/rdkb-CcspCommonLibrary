[Unit]
Description=CcspEthAgent service

After=webpa.service

[Service]
Type=forking
WorkingDirectory=/usr/ccsp/ethagent
Environment="Subsys=eRT."
Environment="LOG4C_RCPATH=/etc"
EnvironmentFile=/etc/device.properties
ExecStart=/usr/bin/CcspEthAgent -subsys $Subsys
ExecStop=/bin/sh -c 'echo "`date`: Stopping/Restarting CcspEthAgent" >> ${PROCESS_RESTART_LOG}'
Restart=always

StandardOutput=syslog+console

[Install]
WantedBy=wifi-initialized.target
