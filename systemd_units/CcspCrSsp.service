[Unit]
Description=CcspCrSsp service

[Service]
Type=forking
WorkingDirectory=/usr/ccsp
Environment="Subsys=eRT."
Environment="LOG4C_RCPATH=/etc"
TimeoutStartSec=120
#RDK-7248: Temp Workaround 
ExecStartPre=/bin/sh -c '(/usr/ccsp/ccspSysConfigEarly.sh && sleep 60)'
ExecStart=/usr/bin/CcspCrSsp -subsys $Subsys
Restart=always

StandardOutput=syslog+console

[Install]
WantedBy=multi-user.target
